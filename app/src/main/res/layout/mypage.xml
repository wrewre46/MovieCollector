<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/text1"
        android:text="My Page"
        android:textSize="40sp"
        android:textColor="#0040FF"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_id"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:text="ID / Password" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="EVENT"
        android:textColor="#8F3547"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cgv1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="CGV" />

        <Button
            android:id="@+id/lottecinema1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="lottecinema" />

        <Button
            android:id="@+id/megabox1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="megabox" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/text3"
        android:text="DISCOUNT INFORMATION"
        android:textSize="20sp"
        android:textColor="#8F3547"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cgv2"
            android:layout_width="130dp"
            android:layout_height="119dp"
            android:layout_marginTop="0dp"
            android:text="CGV"
            android:padding="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/lottecinema2"
            android:layout_width="130dp"
            android:layout_height="119dp"
            android:layout_marginTop="0dp"
            android:text="lottecinema"
            android:padding="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/megabox2"
            android:layout_width="130dp"
            android:layout_height="119dp"
            android:layout_marginTop="0dp"
            android:text="megabox"
            android:padding="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>